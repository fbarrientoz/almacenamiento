<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlmacenamientoSP_2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et1"
        android:hint="Nombre de la persona" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="73dp" android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/et2"
        android:hint="Datos" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="41dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/et1"
        android:layout_marginLeft="30dp" />
    <Button
        android:text="Grabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGrabar"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="43dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/et2"
        android:layout_marginLeft="30dp" />
    <Button
        android:text="Recuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRecuperar" android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/et2" android:layout_marginEnd="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="85dp" />

    <Button
        android:text="Menu Principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenuPrincipal"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="14dp" />

</androidx.constraintlayout.widget.ConstraintLayout>